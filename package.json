{
  "name": "eslint-plugin-wordpress",
  "version": "0.1.0",
  "description": "A collection of custom ESLint rules that help enforce JavaScript coding standard in the WordPress project.",
  "license": "MIT",
  "repository": "ntwb/eslint-plugin-wordpress",
  "author": {
    "name": "Stephen Edgar",
    "email": "stephen@netweb.com.au",
    "url": "https://netweb.com.au"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "xo && nyc ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "code",
    "code style",
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslintplugin",
    "eslint-plugin",
    "eslint-plugin-wordpress",
    "JavaScript",
    "jscs",
    "jshint",
    "jslint",
    "lint",
    "linter",
    "linting",
    "standard",
    "validate",
    "wordpress"
  ],
  "dependencies": {
    "eslint": "^2.8.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "coveralls": "^2.11.9",
    "eslint-plugin-ava": "^2.2.1",
    "eslint-plugin-i18n": "^1.0.1",
    "eslint-plugin-jsdoc": "^2.3.1",
    "eslint-plugin-node": "^1.0.0",
    "eslint-plugin-qunit": "^0.8.0",
    "eslint-plugin-wpcalypso": "^1.1.3",
    "is-plain-obj": "^1.0.0",
    "merge": "^1.2.0",
    "nyc": "^6.4.0",
    "xo": "^0.15.0"
  },
  "peerDependencies": {
    "eslint": ">=2"
  },
  "eslintConfig": {
    "plugins": [
      "ava"
    ],
    "extends": [
      "plugin:ava/recommended"
    ]
  },
  "xo": {
    "rules": {
      "xo/filename-case": 0
    }
  }
}

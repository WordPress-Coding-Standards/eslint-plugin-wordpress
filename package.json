{
  "name": "eslint-plugin-wordpress",
  "version": "0.1.0",
  "description": "A collection of custom ESLint rules that help enforce JavaScript coding standard in the WordPress project.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ntwb/eslint-plugin-wordpress.git"
  },
  "homepage": "https://github.com/ntwb/eslint-plugin-wordpress#readme",
  "author": {
    "name": "Stephen Edgar",
    "email": "stephen@netweb.com.au",
    "url": "https://netweb.com.au"
  },
  "engines": {
    "node": ">=6.9.1"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "jest": "jest",
    "lint": "eslint . --ignore-path .gitignore",
    "pretest": "npm run lint",
    "release": "npmpub --verbose",
    "test": "jest",
    "watch": "jest --watch"
  },
  "keywords": [
    "code",
    "code style",
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslintplugin",
    "eslint-plugin",
    "eslint-plugin-wordpress",
    "JavaScript",
    "jscs",
    "jshint",
    "jslint",
    "lint",
    "linter",
    "linting",
    "standard",
    "validate",
    "wordpress"
  ],
  "dependencies": {
    "eslint-plugin-ava": "~4.2.0",
    "eslint-plugin-backbone": "~2.0.2",
    "eslint-plugin-i18n": "~1.1.0",
    "eslint-plugin-jsdoc": "~3.1.1",
    "eslint-plugin-node": "~5.1.0",
    "eslint-plugin-qunit": "~3.1.0",
    "eslint-plugin-wpcalypso": "~3.4.0",
    "merge": "~1.2.0"
  },
  "devDependencies": {
    "coveralls": "~2.13.1",
    "eslint": "~4.1.1",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-wordpress": "git://github.com/WordPress-Coding-Standards/eslint-plugin-wordpress.git#a9f226f545802cf06bc472b38fe8f54e00c61e92",
    "is-plain-obj": "~1.1.0",
    "jest": "^20.0.4",
    "npmpub": "^3.1.0"
  },
  "peerDependencies": {
    "eslint": ">=2.9.0"
  },
  "jest": {
    "roots": [
      "__tests__"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "verbose": true
  }
}
